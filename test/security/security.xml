<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.module.category" id="module_category_expense">
        <field name="name">Expense</field>
    </record>

    <record id="group_own_expense_user" model="res.groups">
        <field name="name">Own Expense User</field>
        <field name="category_id" ref="module_category_expense"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_expense_manager" model="res.groups">
        <field name="name">Expense Manager</field>
        <field name="category_id" ref="module_category_expense"/>
        <field name="implied_ids" eval="[(4, ref('group_own_expense_user'))]"/>
    </record>

    <record id="group_expense_admin" model="res.groups">
        <field name="name">Expense Admin</field>
        <field name="category_id" ref="module_category_expense"/>
        <field name="implied_ids" eval="[(4, ref('group_expense_manager'))]"/>
    </record>

    <record id="access_own_expense_user" model="ir.model.access">
        <field name="name">Own Expense Access</field>
        <field name="model_id" ref="model_employee_expense"/>
        <field name="group_id" ref="group_own_expense_user"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>

    <record id="access_expense_manager" model="ir.model.access">
        <field name="name">Expense Manager Access</field>
        <field name="model_id" ref="model_employee_expense"/>
        <field name="group_id" ref="group_expense_manager"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>

    <record id="access_expense_admin" model="ir.model.access">
        <field name="name">Expense Admin Access</field>
        <field name="model_id" ref="model_employee_expense"/>
        <field name="group_id" ref="group_expense_admin"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>

    <record id="rule_expense_final_user" model="ir.rule">
        <field name="name">Expense Final own Rule</field>
        <field name="model_id" ref="test.model_employee_expense"/>
        <field name="domain_force">[('Employees_id.id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_own_expense_user'))]"/>
    </record>

    <record id="rule_expense_approval_level_1" model="ir.rule">
        <field name="name">Expense Level 1 Approval Rule</field>
        <field name="model_id" ref="test.model_employee_expense"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_expense_manager'))]"/>
    </record>

    <record id="rule_expense_final_approval" model="ir.rule">
        <field name="name">Expense Final Approval Rule</field>
        <field name="model_id" ref="test.model_employee_expense"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_expense_admin'))]"/>
    </record>

</odoo>
