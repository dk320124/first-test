<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.actions.act_window" id="international_expense_action">
        <field name="name">New International Expense</field>
        <field name="res_model">employee.expense</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{ 'default_expense_type': 'international'}</field>
        <field name="domain">[('expense_type', '=', 'international')]</field>
    </record>

    <menuitem id="main_expense_menu"
              name="International Expense"
              action="international_expense_action"
              parent="employee_menu"
              sequence="30"/>

</odoo>